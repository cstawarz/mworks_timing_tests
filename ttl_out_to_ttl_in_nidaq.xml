<?xml version="1.0" standalone="no"?>
<monkeyml version="1.0">
    <io_devices tag="IO Devices">
        <iodevice type="nidaq" tag="nidaq" name="Dev1" update_interval="1.5ms" analog_input_data_interval="1.5ms" analog_output_data_interval="1.5ms" assume_multiplexed_adc="YES">
            <iochannel type="nidaq_digital_output" tag="port0" port_number="0" num_lines_in_port="8" line0="ttl_out" line1="" line2="" line3="" line4="" line5="" line6="" line7="" line8="" line9="" line10="" line11="" line12="" line13="" line14="" line15="" line16="" line17="" line18="" line19="" line20="" line21="" line22="" line23="" line24="" line25="" line26="" line27="" line28="" line29="" line30="" line31=""></iochannel>
            <iochannel type="nidaq_digital_input" tag="port1" port_number="1" num_lines_in_port="8" line0="ttl_in" line1="" line2="" line3="" line4="" line5="" line6="" line7="" line8="" line9="" line10="" line11="" line12="" line13="" line14="" line15="" line16="" line17="" line18="" line19="" line20="" line21="" line22="" line23="" line24="" line25="" line26="" line27="" line28="" line29="" line30="" line31=""></iochannel>
        </iodevice>
    </io_devices>
    <variables tag="Variables">
        <variable tag="ttl_out" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
        <variable tag="ttl_in" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
        <variable tag="send_time" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
        <variable tag="receive_time" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
        <variable tag="elapsed_time" scope="global" logging="when_changed" default_value="0" type="float"></variable>
        <variable tag="num_repeats" scope="global" logging="when_changed" default_value="1000" type="integer"></variable>
        <variable tag="num_done" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
        <variable tag="start" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
        <variable tag="stop" scope="global" logging="when_changed" default_value="0" type="integer"></variable>
    </variables>
    <sounds tag="Sounds"></sounds>
    <stimuli tag="Stimuli"></stimuli>
    <filters tag="Filters"></filters>
    <optimizers tag="Optimizers"></optimizers>
    <experiment tag="New Experiment" full_name="" description="">
        <protocol tag="New Protocol" nsamples="10" sampling_method="cycles" selection="sequential" interruptible="YES">
            <task_system tag="New Task System" interruptible="YES">
                <task_system_state tag="Begin State System" interruptible="YES">
                    <action_marker _unmoveable="1" tag="Actions"></action_marker>
                    <action type="assignment" tag="Reset ttl_out" variable="ttl_out" value="0"></action>
                    <action type="assignment" tag="Reset ttl_in" variable="ttl_in" value="0"></action>
                    <action type="assignment" tag="Reset num_done" variable="num_done" value="0"></action>
                    <action tag="Start IO Device" type="start_device_IO" device="nidaq"></action>
                    <action type="assignment" tag="Initialize send_time" variable="send_time" value="now()"></action>
                    <action type="assignment" tag="Start event collection" variable="start" value="!start"></action>
                    <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    <transition type="direct" tag="Always Go to ... 2" target="Send TTL"></transition>
                </task_system_state>
                <task_system_state tag="Send TTL" interruptible="YES">
                    <action_marker _unmoveable="1" tag="Actions"></action_marker>
                    <action type="assignment" tag="Toggle output" variable="ttl_out" value="!ttl_out"></action>
                    <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    <transition type="conditional" tag="If Condition is True, Transition to ... 2" condition="ttl_in == ttl_out" target="TTL Received"></transition>
                </task_system_state>
                <task_system_state tag="TTL Received" interruptible="YES">
                    <action_marker _unmoveable="1" tag="Actions"></action_marker>
                    <action type="assignment" tag="Store receive time" variable="receive_time" value="now()"></action>
                    <action type="assignment" tag="Compute elapsed time" variable="elapsed_time" value="(receive_time - send_time) / 1000.0"></action>
                    <action type="assignment" tag="Update send time" variable="send_time" value="receive_time"></action>
                    <action type="assignment" tag="Increment num_done" variable="num_done" value="num_done + 1"></action>
                    <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    <transition type="conditional" tag="If Condition is True, Transition to ..." condition="num_done >= num_repeats" target="Exit State System"></transition>
                    <transition type="direct" tag="Always Go to ..." target="Send TTL"></transition>
                </task_system_state>
                <task_system_state tag="Exit State System" interruptible="YES">
                    <action_marker _unmoveable="1" tag="Actions"></action_marker>
                    <action type="assignment" tag="Stop event collection" variable="stop" value="!stop"></action>
                    <action tag="Stop IO Device" type="stop_device_IO" device="nidaq"></action>
                    <transition_marker _unmoveable="1" tag="Transitions"></transition_marker>
                    <transition tag="Return to parent task system" type="yield"></transition>
                </task_system_state>
            </task_system>
        </protocol>
    </experiment>
</monkeyml>